@model APP_DATA.DTO.ChuongTrinhKhuyenMaiResponse

@{
    ViewData["Title"] = "Edit";
}

<h3>Chỉnh sửa chương trình khuyến mãi</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="TenChuongTrinhKhuyenMai" class="control-label">Tên chương trình khuyến mãi</label>
                <input asp-for="TenChuongTrinhKhuyenMai" class="form-control" />
                <span asp-validation-for="TenChuongTrinhKhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayBatDau" class="control-label">Ngày bắt đầu</label>
                <input asp-for="NgayBatDau" class="form-control" />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayKetThuc" class="control-label">Ngày kết thúc</label>
                <input asp-for="NgayKetThuc" class="form-control" />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                <select asp-for="TrangThai" class="form-control">
                    @{
                        string[] status = (string[])Enum.GetNames(typeof(StatusOptions));
                    }
                    @foreach (string item in status)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <input type="hidden" asp-for="ID_ChuongTrinhKhuyenMai" />
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model APP_DATA.DTO.HangResponse

@{
    ViewData["Title"] = "Details";
}

<h4>Chi tiết hãng</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Tên Hãng")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenHang)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Mô tả")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Trạng thái")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID_Hang }, new { @class = "btn btn-warning" }) |
    <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
</div>

@model APP_DATA.DTO.ChuongTrinhKhuyenMaiResponse

@{
    ViewData["Title"] = "Details";
}

<h4>Chi tiết chương trình khuyến mãi</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Tên chương trình khuyến mãi")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenChuongTrinhKhuyenMai)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Ngày bắt đầu")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayBatDau)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Ngày kết thúc")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayKetThuc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Trạng thái")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID_ChuongTrinhKhuyenMai }, new { @class = "btn btn-warning" })

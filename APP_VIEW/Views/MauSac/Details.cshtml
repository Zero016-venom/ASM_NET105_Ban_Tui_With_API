@model APP_DATA.DTO.MauSacResponse

@{
    ViewData["Title"] = "Details";
}

<h4>Chi tiết màu</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Tên màu")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenMauSac)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Mô tả")
        </dt>
